{
  "name": "generator.handlebars",
  "version": "3.0.0",
  "description": "Template code generator based on Handlebars",
  "main": "generator.handlebars.js",
  "types": "index.d.ts",
  "bin": {
    "generator-hbs": "./cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate": "node generate.js",
    "lint": "eslint lib/**/*.js *.js",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:spell": "cspell \"**/*.{js,md,json}\" --no-progress",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:spell",
    "format": "prettier --write \"lib/**/*.js\" \"*.js\" \"*.json\"",
    "format:check": "prettier --check \"lib/**/*.js\" \"*.js\" \"*.json\"",
    "depcheck": "depcheck",
    "validate": "npm run format && npm run lint:all && npm test",
    "release:check": "node -e \"console.log('Version:', require('./package.json').version)\"",
    "release:dry-run": "npm pack --dry-run",
    "branch-protection": "node .github/scripts/setup-branch-protection.js",
    "postinstall": "node ./postinstall.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dustylau/generator.handlebars.git"
  },
  "keywords": [
    "code-generator",
    "Handlebars",
    "template",
    "scaffolding"
  ],
  "author": "Dusty Lau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dustylau/generator.handlebars/issues"
  },
  "homepage": "https://github.com/dustylau/generator.handlebars#readme",
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@types/node": "^25.1.0",
    "cspell": "^9.6.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "markdownlint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
